<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <View
        android:id="@+id/viewUps"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#B5B5B5"
        app:layout_constraintBottom_toTopOf="@+id/imageCoolerRecycle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageCoolerRecycle"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewUps"
        tools:background="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/nameCoolerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="-40dp"
        android:textStyle = "bold"
        android:textSize = "18sp"
        android:text="@string/nameCooler"
        app:layout_constraintBottom_toBottomOf="@+id/imageCoolerRecycle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nameCooler"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/nameCoolerView"
        app:layout_constraintTop_toTopOf="@+id/nameCoolerView"
        android:textStyle = "bold"
        android:textSize = "18sp"
        tools:text="i5-10400F" />

    <TextView
        android:id="@+id/coolerPriceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/nameCoolerView"
        app:layout_constraintTop_toBottomOf="@+id/nameCooler"
        android:textStyle = "bold"

        android:textSize = "18sp"
        android:text="Ціна:"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/coolerPrice"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/nameCooler"
        app:layout_constraintTop_toTopOf="@+id/coolerPriceView"
        tools:text="1550" />
    <TextView
        android:id="@+id/CoolerTDPView"
        android:layout_width="158dp"
        android:layout_height="27dp"
        android:layout_marginTop="15dp"
        android:text="@string/tdp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/coolerPriceView"
        app:layout_constraintTop_toBottomOf="@+id/coolerPrice" />

    <TextView
        android:id="@+id/CoolerTDP"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/coolerPrice"
        app:layout_constraintTop_toTopOf="@+id/CoolerTDPView"
        tools:text="s1151" />
</androidx.constraintlayout.widget.ConstraintLayout>